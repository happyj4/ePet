<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    card_view:cardBackgroundColor="#80FFFFFF"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_tittletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/e_ukraine_regular"
            android:text="Паспорт домашньої\nтварини"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_left"
            card_view:layout_constraintTop_toTopOf="@+id/guideline_horizontal_tittletext" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="148dp"
            android:layout_height="195dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_cat_test"
            android:background="@drawable/bg_rounded"
            android:clipToOutline="true"
            card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_left"
            card_view:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_photo" />

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            app:layout_constraintStart_toEndOf="@id/iv_photo"
            app:layout_constraintTop_toTopOf="@id/iv_photo"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_static_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/e_ukraine_regular"
                android:text="Дата\nнародження:"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_birth_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/e_ukraine_regular"
                android:text="24.03.2020"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_static_passport_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/e_ukraine_regular"
                android:text="Номер паспорту:"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_passport_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/e_ukraine_regular"
                android:text="UA AA 658199"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_last_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/e_ukraine_regular"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Паспорт оновлено 24.09.2025 Паспорт оновлено 24.09.2025"
            android:textSize="13sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_marquee"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_marquee" />

        <TextView
            android:id="@+id/tv_name_ua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/e_ukraine_regular"
            android:text="Донні"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_left"
            card_view:layout_constraintTop_toTopOf="@+id/guideline_horizontal_name" />

        <TextView
            android:id="@+id/tv_name_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/e_ukraine_regular"
            android:text="Donni"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_left"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_name_ua" />

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_info"
            android:clickable="true"
            android:focusable="true"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline_vertical_right"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_name_ua" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_tittletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.06" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.22" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.77" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.82" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.07" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.93" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
